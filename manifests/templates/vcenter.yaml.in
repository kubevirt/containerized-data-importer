---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: vcenter-deployment
  namespace: {{ .Namespace }}
  labels:
    cdi.kubevirt.io/testing: ""
spec:
  selector:
    matchLabels:
      app: vcenter
  replicas: 1
  template:
    metadata:
      labels:
        app: vcenter
        cdi.kubevirt.io/testing: ""
    spec:
      securityContext:
        runAsUser: 0
      serviceAccountName: cdi-sa
      containers:
      - name: vcsim
        image: {{ .DockerRepo }}/vcenter-simulator:{{ .DockerTag }}
        imagePullPolicy: {{ .PullPolicy }}
        env:
          - name: NAMESPACE
            value: {{ .Namespace }}
        command: ["/usr/bin/entrypoint.sh"]
        ports:
        - name: vcsim
          containerPort: 8989
---
apiVersion: v1
kind: Service
metadata:
  name: vcenter
  namespace: {{ .Namespace }}
  labels:
    cdi.kubevirt.io/testing: ""
spec:
  selector:
      app: vcenter
  type: NodePort
  ports:
  - name: vcsim
    port: 8989
    targetPort: 8989
