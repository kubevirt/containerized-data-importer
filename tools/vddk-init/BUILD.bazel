load("@io_bazel_rules_docker//container:container.bzl", "container_image")

container_image(
    name = "vddk-init-image",
    base = "@fedora//image",
    cmd = "mkdir -p /opt",
    entrypoint = "cp -r /vmware-vix-disklib-distrib /opt; cp /downloaded /opt/libxcrypt-compat.rpm",
    files = [
        "vmware-vix-disklib-distrib",
        "@libxcrypt-compat//file",
    ],
    visibility = ["//visibility:public"],
)
